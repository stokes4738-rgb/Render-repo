# Production Environment Variables for Pocket Bounty
# Copy this to your Hetzner server and fill in the values

# Database
DATABASE_URL=postgresql://pocketbounty:changethispassword@localhost:5432/pocketbounty_prod
PGDATABASE=pocketbounty_prod
PGHOST=localhost
PGPASSWORD=changethispassword
PGPORT=5432
PGUSER=pocketbounty

# Application
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://pocketbounty.life

# Authentication
JWT_SECRET=your-secure-jwt-secret-change-this-to-random-string
SESSION_SECRET=your-secure-session-secret-change-this-to-random-string

# Stripe (copy from your Replit environment)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
VITE_STRIPE_PUBLIC_KEY=pk_live_YOUR_STRIPE_PUBLIC_KEY
STRIPE_CONNECT_CLIENT_ID=ca_YOUR_STRIPE_CONNECT_CLIENT_ID
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# SendGrid (copy from your Replit environment)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY

# Optional: If you need DOTS API
DOTS_API_KEY=YOUR_DOTS_API_KEY
DOTS_API_URL=YOUR_DOTS_API_URL